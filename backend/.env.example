# Host Tools API
HOSTTOOLS_AUTH_TOKEN=your_token_here

# Google Gemini API
GEMINI_API_KEY=your_key_here

# Database (SQLite for dev, PostgreSQL for production)
DATABASE_URL=sqlite+aiosqlite:///./vbr.db
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/vbr

# Security
SECRET_KEY=change-me-in-production
OWNER_PIN=1234
CLEANER_PIN=1234

# ntfy.sh notifications (self-hosted on Hetzner)
NTFY_URL=https://ntfy.yourdomain.com
NTFY_TOPIC=vbr
NTFY_TOKEN=

# Home Assistant (Rental Manager) via Tailscale
HA_195_URL=
HA_193_URL=

# Server
HOST=0.0.0.0
PORT=8000
DEBUG=true
BASE_URL=http://localhost:8000

# AI Settings
AI_AUTO_REPLY=false
AI_CONFIDENCE_THRESHOLD=0.95

# Host Tools polling fallback (seconds)
HOSTTOOLS_POLL_INTERVAL=120
